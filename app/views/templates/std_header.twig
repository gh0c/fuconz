

<header id = "header">
    <nav class = "main">
        <div class = "logo">
            <strong>
                <a href="{{ urlFor('home') }}" title="Fucon탑.net - Po훾etna">Social network</a>
            </strong>
        </div>


        <ul class = "menu right-fl">
            {% if auth_admin %}
            <li>
                <a href = "{{ urlFor("admin.home") }}" target="_blank" title="Admin panel"><i class = "fa fa-fw fa-cogs"></i></a>
            </li>
            {% endif %}
            <li>
                <a href = "{{ urlFor("about-site") }}">O stranici</a>
            </li>
            <li>
                <a href = "{{ urlFor("location") }}">Di halamo</a>
            </li>
            {% if auth_user %}
                <li class = "user-sign" title="{{ auth_user.ssbos("Prijavljena 훾lanica", "Prijavljeni 훾lan") }} {{ auth_user.username }}">
                    <i class = "fa fa-user"></i>
                </li>
                <li class = "auth"><a href="{{ urlFor('user.logout') }}">Odjava</a></li>
            {% else %}
                <li class = "user-sign" title="Niste prijavljeni">
                    <i class = "fa fa-user-secret"></i>
                </li>
                <li class = "auth"><a href="{{ urlFor('user.login') }}">Prijava</a></li>
                <li class = "auth"><a href="{{ urlFor('user.registration') }}">Registracija</a></li>

            {% endif %}
        </ul>

    </nav>
    {% if auth_user %}
        {% include 'user/user.header.twig' %}
    {% endif %}

</header>