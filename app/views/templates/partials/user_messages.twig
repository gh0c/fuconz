{% for success in user_success_msgs %}
    <div class = "vertical-section info">
        <div class = "inner-70pct">
            <div class = "status-container msg success-msg">
                <i class="status fa fa-check"></i> <h4>{{ success|nl2br }}</h4><i class="status fa"></i>
            </div>
        </div>
    </div>

{% endfor %}
{% if flash.success %}
    <div class = "vertical-section info">
        <div class = "inner-70pct">
            <div class = "status-container msg success-msg warning-msg">
                <i class="status fa fa-check"></i> <h4>{{ flash.success|nl2br }}</h4><i class="status fa"></i>
            </div>
        </div>
    </div>

{% endif %}



