


<nav class="secondary user search open visible">
    <div class="left-fl">
        <img src="public/graphics/soc_net.png">

        <div class="home-cont">
            <div class="welcome-name">
                <div class = "name">
                    <h5 class ="classic">{{ auth_user.ssbos("Dobrodošla,", "Dobrodošao,") }}</h5>
                    <a href="{{ urlFor('user.home') }}" class="first-last-name" title="Članske stranice">{{ auth_user.full_name() }}</a>
                </div>
                <h5 class ="classic">{{ auth_user.username }}</h5>

            </div>
        </div>


        <ul class="menu">
            <li class="dropdown{% if active_page == "user.profile" %} active{% endif %}" data-filter="profile">
                <span><i class = "fa fa-cogs fa-fw"></i> Profil</span>
            </li>
            <li class="no-dropdown{% if active_page == "user.reservations" %} active{% endif %}" data-filter="reservation">
                <a href = "{{ urlFor('user.book-training-course') }}"><i class = "fa fa-calendar fa-fw"></i> Rezervacije</a>
            </li>
            <li class="dropdown{% if active_page == "user.main" %} active {% endif %}" data-filter="user-main">
                <span><i class = "fa fa-user fa-fw"></i> Korisničke stranice</span>
            </li>
        </ul>
    </div>

</nav>
<div class = "empty-horiz-spacer-5 white-bg"></div>

<nav class="nav-filters user" id="nav-filters">

    <div class="filter filter-profile list-tags">
        <ul>
            <li><a href="{{ urlFor('user.profile.home') }}"
                   {% if active_item == "user.profile.home" %}class = "active"{% endif %}>Početna</a></li>
            <li><a href="{{ urlFor('user.profile.password-change') }}"
                   {% if active_item == "user.profile.password-change" %}class = "active"{% endif %}><i class = "fa fa-fw fa-key"></i> Promjena lozinke</a></li>
            <li><a href="/" >Povijest aktivnosti</a></li>
        </ul>
    </div>


    <div class="filter filter-user-main list-tags">
        <ul>
            <li><a href="poruke"
                   {% if active_item == "user.main.messages" %}class = "active"{% endif %}><i class = "fa fa-fw fa-envelope-o"></i> Poruke</a></li>
            <li><a href="{{ urlFor('user.logout') }}"><i class = "fa fa-fw fa-sign-out"></i> Odjava</a></li>
        </ul>
    </div>


</nav>